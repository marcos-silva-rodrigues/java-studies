<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/son_hibernate</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="show_sql">true</property>

        <mapping class="com.learning.hibernate.model.User"></mapping>
        <mapping class="com.learning.hibernate.model.Address"></mapping>
        <mapping class="com.learning.hibernate.model.Options"></mapping>
        <mapping class="com.learning.hibernate.crud.Product"></mapping>
    </session-factory>
</hibernate-configuration>